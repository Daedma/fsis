{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30
	},
	"configurePresets": [
		{
			"name": "default",
			"hidden": false,
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		}
	],
	"buildPresets": [
		{
			"name": "Debug",
			"configuration": "Debug",
			"configurePreset": "default"
		},
		{
			"name": "Release",
			"configuration": "Release",
			"configurePreset": "default"
		},
		{
			"name": "Debug (clean)",
			"configuration": "Debug",
			"configurePreset": "default",
			"cleanFirst": true
		},
		{
			"name": "Release (clean)",
			"configuration": "Release",
			"configurePreset": "default",
			"cleanFirst": true
		}
	]
}